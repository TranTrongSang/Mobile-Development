<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Name:"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/textName"
        android:layout_toRightOf="@id/textName"
        android:layout_alignBaseline="@id/textName"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:hint="Enter your name"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Email:"
        android:layout_below="@id/textName"
        android:layout_alignStart="@id/textName"
        android:layout_alignLeft="@id/textName"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/textEmail"
        android:layout_toRightOf="@id/textEmail"
        android:layout_alignBaseline="@id/textEmail"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:hint="Enter your email"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp" />

    <TextView
        android:id="@+id/textProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Project:"
        android:layout_below="@id/textEmail"
        android:layout_alignStart="@id/textEmail"
        android:layout_alignLeft="@id/textEmail"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/editTextProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/textProject"
        android:layout_toRightOf="@id/textProject"
        android:layout_alignBaseline="@id/textProject"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:hint="Enter your project name"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp" />

    <Button
        android:id="@+id/buttonViewContactInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View contact Info"
        android:layout_below="@id/editTextProject"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
